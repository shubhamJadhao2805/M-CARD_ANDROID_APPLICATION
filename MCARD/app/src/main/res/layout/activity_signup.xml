<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C31954"
    android:isScrollContainer="true"
    tools:context=".signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbarSize="1dp"
        android:scrollbarThumbVertical="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="83dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/newlogo"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M-CARD"
                android:textColor="#F7F0F0F0"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="580dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/loginback"
                android:gravity="center|center_horizontal|top"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="103dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="30dp"
                    android:text="Enter Your Details"
                    android:textColor="#D82B2A2A"
                    android:textSize="24sp" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <EditText
                    android:id="@+id/txtName2"
                    android:layout_width="285dp"
                    android:layout_height="47dp"
                    android:background="@drawable/textfield"
                    android:ems="10"
                    android:hint="First and Last name"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:textColor="#F8252525"
                    android:textColorHint="#CB9E9A9A"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="303dp"
                    android:layout_height="18dp" />

                <EditText
                    android:id="@+id/txtMob2"
                    android:layout_width="285dp"
                    android:layout_height="47dp"
                    android:background="@drawable/textfield"
                    android:ems="10"
                    android:hint="Enter Your Mobile No"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:textColor="#F8252525"
                    android:textColorHint="#CB9E9A9A"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="13dp" />

                <EditText
                    android:id="@+id/bloodgroup"
                    android:layout_width="283dp"
                    android:layout_height="47dp"
                    android:background="@drawable/textfield"
                    android:ems="10"
                    android:hint="Blood Group"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:textColor="#F8252525"
                    android:textColorHint="#CB9E9A9A" />

                <View
                    android:id="@+id/view10"
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="283dp"
                    android:layout_height="47dp"
                    android:background="@drawable/textfield"
                    android:ems="10"
                    android:hint="Date of Birth"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:textColor="#F8252525"
                    android:textColorHint="#CB9E9A9A" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="297dp"
                    android:layout_height="18dp" />

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="285dp"
                    android:layout_height="47dp"
                    android:background="@drawable/textfield"
                    android:ems="10"
                    android:hint="Enter Your Password"
                    android:inputType="textPersonName|textPassword"
                    android:paddingLeft="15dp"
                    android:textColor="#F8252525"
                    android:textColorHint="#CB9E9A9A"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <EditText
                    android:id="@+id/repassword"
                    android:layout_width="285dp"
                    android:layout_height="47dp"
                    android:background="@drawable/textfield"
                    android:ems="10"
                    android:hint="Re-enter Your Password"
                    android:inputType="textPersonName|textPassword"
                    android:paddingLeft="15dp"
                    android:textColor="#F8252525"
                    android:textColorHint="#CB9E9A9A" />

                <View
                    android:id="@+id/view16"
                    android:layout_width="319dp"
                    android:layout_height="15dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="289dp"
                    android:layout_height="54dp"
                    android:background="@drawable/signupbutton"
                    android:onClick="Register" />

                <View
                    android:id="@+id/view11"
                    android:layout_width="303dp"
                    android:layout_height="13dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:text="By registering,you agree to our "
                    android:textAlignment="center"
                    android:textColor="#E4FFFFFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Privacy policy"
                    android:textColor="#F3EC0E0E" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>